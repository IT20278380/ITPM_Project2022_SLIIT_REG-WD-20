@using Microsoft.AspNetCore.Identity
@using ITPM_Project2022_SLIIT.Areas.Identity.Data

@inject SignInManager<ATMSUser> SignInManager
@inject UserManager<ATMSUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item TfontT">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><b>View @UserManager.GetUserName(User) Profile</b></a>
    </li><span class="tab"></span>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="btn btn-outline-secondary" id="logout">Logout</button>
        </form>
    </li>
}
else
{
    <div class="TfontT">
        <li class="nav-item">
            <a class="btn btn-outline-secondary" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    </div><span class="tab"></span>
    <div class="TfontT">
        <li class="nav-item">
            <a class="btn btn-outline-secondary" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    </div>
}
</ul>
