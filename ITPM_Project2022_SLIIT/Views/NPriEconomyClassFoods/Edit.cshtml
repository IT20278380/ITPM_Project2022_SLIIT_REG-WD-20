@model ITPM_Project2022_SLIIT.Models.PriEconomyClassFood

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Primiun Economic Class Foods</h2>
<hr />

<div class="Naddform">
    <div class="Nform2" >
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FoodName" class="control-label"></label>
                <input asp-for="FoodName" class="form-control" />
                <span asp-validation-for="FoodName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input type="hidden" asp-for="Image" class="form-control" />
                <input disabled asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <li><label class="control-label">Food Status</label></li>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="FoodStatus" id="FoodStatus" value="1" asp-for="FoodStatus">
                  <label class="form-check-label" >
                    Available
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="FoodStatus" id="FoodStatus" value="0" asp-for="FoodStatus">
                  <label class="form-check-label">
                    Non Available
                  </label>
                <span asp-validation-for="FoodStatus" class="text-danger"></span>
            </div><br/>
            </div>
            <div class="form-group">
               <center><input type="submit" value="Update Details" class="btn btn-outline-primary" style="width:300px;" /></center> 
            </div>
        </form>
    </div>
</div>
