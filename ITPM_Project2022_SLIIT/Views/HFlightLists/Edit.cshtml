@model ITPM_Project2022_SLIIT.Models.FlightList

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="pageName">Update details</h2>

<div>
    <a asp-action="Index" class = "HUpBackButton"> <img src="https://img.icons8.com/ios-filled/50/000000/circled-left-2.png"/></a>
</div>
    
        <form onsubmit="Flists(event)" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
           
<div class="row HUpdateformMargin container">
<div class="col align-self-center Upform">

            <div class="form-group">
                <h5 class = "HUpFormName">Flight Details</h5> <hr>
               <li><label class="control-label">Flight Name :</label></li>
                <input asp-for="FlightName" class="form-control" required/>
                <span asp-validation-for="FlightName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <li><label class="control-label">Date :</label></li>
                <input asp-for="Date" type="date" class="form-control" required/>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <li><label class="control-label">Time :</label></li>
                <input asp-for="Time" id="time" class="form-control" required/>
                <span asp-validation-for="Time" class="text-danger"></span>
                <div id="time_error" class="error hidden">Please enter a valid Time, 24 Format</div>
            </div>
            <div class="form-group">
                <li><label class="control-label">Destination :</label></li>
                <input asp-for="Destination" class="form-control" required/>
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
</div>
<span class="HAtab"></span>
<div class="col align-self-center Upform">

 <div class="form-group">
                 <h5 class = "HUpFormName">Ticket Details</h5> <hr>
                <li><label class="control-label">First class Ticket Price :</label></li>
                <input asp-for="FirstClassPrice" id="price1" class="form-control" />
                <span asp-validation-for="FirstClassPrice" class="text-danger"></span>
                <div id="price1_error" class="error hidden">Please enter a valid Price</div>
            </div>
            <div class="form-group">
                <li><label class="control-label">Business Class Ticket Price :</label></li>
                <input asp-for="BsClassPrice" id="price2" class="form-control" />
                <span asp-validation-for="BsClassPrice" class="text-danger"></span>
                <div id="price2_error" class="error hidden">Please enter a valid Price</div>
            </div>
            <div class="form-group">
                <li><label class="control-label">Premium Economy Class Ticket Price :</label></li>
                <input asp-for="PriEconomyClassPrice" id="price3" class="form-control" />
                <span asp-validation-for="PriEconomyClassPrice" class="text-danger"></span>
                <div id="price3_error" class="error hidden">Please enter a valid Price</div>
            </div>
            <div class="form-group">
                <li><label class="control-label">Economy Class Ticket Price :</label></li>
                <input asp-for="EconomyClassPrice" id="price4" class="form-control" />
                <span asp-validation-for="EconomyClassPrice" class="text-danger"></span>
                <div id="price3_error" class="error hidden">Please enter a valid Price</div>
            </div>

</div>
</div>
                <button class="btn btn-outline-primary HUpConformBut" type="submit">Confirm Details</button>
           
        </form>
  


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
