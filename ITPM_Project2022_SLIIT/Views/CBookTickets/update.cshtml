@model ITPM_Project2022_SLIIT.Models.BookTickets

@{
    ViewData["Title"] = "update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Date And Time</h2>
<br>
<div class="container">
<form asp-action="update">

  <div class="row">

    <div class="col-sm-5 col-sm-2 Cupdiv">
             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="MobileNumber" />
            <input type="hidden" asp-for="Class" />
            <input type="hidden" asp-for="RequiredSeat" />
            <input type="hidden" asp-for="PaidPrice" />
            <input type="hidden" asp-for="SeatNumber" />
            <input type="hidden" asp-for="GateNumber" />
            <input type="hidden" asp-for="TicketNumber" />
            <input type="hidden" asp-for="PaidRecipt" />
            <div class="form-group">
                <label asp-for="PassengerName" class="control-label"></label>
                <input type="hidden" asp-for="PassengerName" class="form-control" />
                <input asp-for="PassengerName" class="form-control" disabled/>
                <span asp-validation-for="PassengerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassportNumber" class="control-label"></label>
                <input type="hidden" asp-for="PassportNumber" class="form-control" />
                <input asp-for="PassportNumber" class="form-control" disabled/>
                <span asp-validation-for="PassportNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input type="hidden" asp-for="Email" class="form-control" />
                 <input asp-for="Email" class="form-control" disabled/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlightName" class="control-label"></label>
                <input type="hidden" asp-for="FlightName" class="form-control" />
                <input asp-for="FlightName" class="form-control" disabled/>
                <span asp-validation-for="FlightName" class="text-danger"></span>
            </div>
            
    </div>
  
    <div class="col-sm-5 offset-sm-2 Cupdiv">
            <div class="form-group">
                <label asp-for="Destination" class="control-label"></label>
                <input type="hidden" asp-for="Destination" class="form-control" />
                <input asp-for="Destination" class="form-control" disabled/>
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input type="date" asp-for="Date" class="form-control" required/>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input asp-for="Time" class="form-control" required/>
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <center><input type="submit" value="Update" class="btn btn-outline-primary" style="width:300px;"/></center>
            </div>
    </div>
  </div>
</form>
</div>