@model IEnumerable<ITPM_Project2022_SLIIT.Models.BookTickets>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Passenger Details</h2>
<br>
<div class="row" style="width:1500px;">
<div class="col-sm-5 col-md-6">

<div class="CAddButton">
    <div class="row">
    <div>
        <p id="noti"></p>
    </div>
    <div class="col-sm-5 offset-sm-2 col-md-6 offset-md-0" >
        <div class="row">
            <div class="col-sm-5 col-md-6">
                <a asp-action="Notification" class="btn btn-outline-primary">Updated Flight</a>
            </div>
            <div class="col-sm-5 offset-sm-2 col-md-6 offset-md-0">
                @using (Html.BeginForm("Export", "CBookTickets", FormMethod.Post))
                {
                <input type="hidden" id="BookTickInput" name="BookTickInput"/>
                <input type="submit" class="btn btn-outline-primary" id="BookTicketsbtnSubmit" value="Generate PDF"/>
                }
            </div>
        </div>
    </div>
    </div>
</div>

</div>

<div class="col-sm-5 offset-sm-2 col-md-6 offset-md-0" >
<form asp-action="Index">
<div class="input-group">
<button class="btn btn-outline-info" type="submit" id="button-addon1"> <b>Search Tickets</b> </button>
<input type="search" value="@ViewData["GetBookTickets"]" name="book" class="form-control " placeholder="Enter Passenger Name">
</div>
</form>
</div>
</div>

<br>
<br>
<div id="BookTick"  class = "table-responsive">
<table class="table tabBor">
    <thead>
        <tr class="tanheight">
            <th>
                @Html.DisplayNameFor(model => model.PassengerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassportNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>

            <th>Confirm</th><th>Update</th>
        </tr>  
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PassengerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassportNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class)
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Confirm Ticket</a>
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Update" asp-route-id="@item.Id">Update</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
