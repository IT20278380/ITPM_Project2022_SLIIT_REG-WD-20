@model ITPM_Project2022_SLIIT.Models.BookTickets

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
            
            <div>
            <br /><br />
            <div class="card text-center Cuk border border-secondary">
            <div class="card-header">
              <h5> Calculate Price</h5>
            </div>
            </div>
            
                <div class="card-body Cgh Cuk border border-secondary">
                    <br />
                    <p>Required Seat :- @Model.RequiredSeat</p>
                   
                    <form onSubmit="cal(event)">
                    <div class="form-group">
                    <label class="control-label">Ticket Price</label>
                    <input id="TicketsPrice" name="TicketsPrice" class="Cqm Cuk" />
                    </div>
                    <center><input href="#" class="btn btn-success Cfc"type="submit" value="Calculate" /></center>
                    <br />
                    <div class="card-footer text-muted">
