                    </div>
                    <br />
                    </form>
                </div>
                </div>

            <br />
            <br />
            
          
            
<div class="container">
  <form asp-action="Edit">
    
  <div class="row">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <input type="hidden" asp-for="Id" />
      <input type="hidden" asp-for="Date" />
      <input type="hidden" asp-for="Time" />

      <div class="col Cgh">
            <div class="form-group">
                <label asp-for="PassengerName" class="control-label"></label>
                <input type="hidden" asp-for="PassengerName" class="form-control" />
                <input asp-for="PassengerName" class="form-control" disabled/>
                <span asp-validation-for="PassengerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassportNumber" class="control-label"></label>
                <input type="hidden" asp-for="PassportNumber" class="form-control" />
                <input asp-for="PassportNumber" class="form-control" disabled/>
                <span asp-validation-for="PassportNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input type="hidden" asp-for="Email" class="form-control" />
                <input asp-for="Email" class="form-control" disabled/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MobileNumber" class="control-label"></label>
                <input type="hidden" asp-for="MobileNumber" class="form-control" />
                <input  asp-for="MobileNumber" class="form-control" disabled/>
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlightName" class="control-label"></label>
                <input type="hidden" asp-for="FlightName" class="form-control" />
                <input asp-for="FlightName" class="form-control" disabled/>
                <span asp-validation-for="FlightName" class="text-danger"></span>
            </div>
        </div>
        
        

        
        <div class="col order-1 Cgh">
            <div class="form-group">
                <label asp-for="Destination" class="control-label"></label>
                <input type="hidden" asp-for="Destination" class="form-control" />
                <input asp-for="Destination" class="form-control" disabled/>
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class" class="control-label"></label>
                <input type="hidden" asp-for="Class" class="form-control" />
                <input asp-for="Class" class="form-control" disabled/>
                <span asp-validation-for="Class" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequiredSeat" class="control-label"></label>
                <input type="hidden" id="requirdSeat" asp-for="RequiredSeat" class="form-control" />
                <input asp-for="RequiredSeat" class="form-control" disabled/>
                <span asp-validation-for="RequiredSeat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaidPrice" class="control-label"></label>
                <input type="hidden" asp-for="PaidPrice" class="form-control" />
                <input asp-for="PaidPrice" class="form-control" disabled/>
                <span asp-validation-for="PaidPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PaidRecipt" class="control-label"></label>
                <input type="hidden" asp-for="PaidRecipt" class="form-control" />
                <img src="~/Images/@Model.PaidRecipt" style="width:330px; height:100px;">
                <span asp-validation-for="PaidRecipt" class="text-danger"></span>
            </div>

            
        </div>
    
   

        
        <div class="col order-5 border border-dark Chm Cmn Cgh">
            <div class="form-group">
                <label asp-for="TicketNumber" class="control-label"></label>
                <input asp-for="TicketNumber" class="form-control" />
                <span asp-validation-for="TicketNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeatNumber" class="control-label"></label>
                <input asp-for="SeatNumber" class="form-control" />
                <span asp-validation-for="SeatNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GateNumber" class="control-label"></label>
                <input asp-for="GateNumber" class="form-control" />
                <span asp-validation-for="GateNumber" class="text-danger"></span>
            </div>

                <div class="form-group">
                   <center><input type="submit" value="Confirm" class="btn btn-primary" /></center> 
                </div>
        </div>

         
    </div>

  </form>
</div>