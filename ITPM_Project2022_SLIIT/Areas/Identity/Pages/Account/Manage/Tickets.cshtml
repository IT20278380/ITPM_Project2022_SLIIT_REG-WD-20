@page
@model TicketsModel
@{
    ViewData["Title"] = "Tickets";
    ViewData["ActivePage"] = ManageNavPages.Tickets;
}

        <form id="profile-form" method="post">
<div class="row" style="width:1000px;">
    <div class="col Booktickets">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PassengerName"></label>
                <input asp-for="PassengerName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="PassportNumber"></label>
                <input asp-for="PassportNumber" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="FlightName"></label>
                <input asp-for="FlightName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Destination"></label>
                <input asp-for="Destination" class="form-control" disabled />
            </div>
    </div>
    <span class="tab"></span>
    <div class="col Booktickets">
            <div class="form-group">
                <label asp-for="Date"></label>
                <input asp-for="Date" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Time"></label>
                <input asp-for="Time" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="SeatNumber"></label>
                <input asp-for="SeatNumber" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="GateNumber"></label>
                <input asp-for="GateNumber" class="form-control" disabled />
            </div>
</div></div>
        </form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}